@{
  Layout = "_Layout";
}
@model PierresTreats.Models.Flavor;

<h1>Add a new flavor</h1>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Select treat")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Add new flavor" />
}

<button>@Html.ActionLink("Home", "Index", "Home")</button>
<button>@Html.ActionLink("All flavors", "Index")</button>
<button>@Html.ActionLink("All treats", "Index", "Treats")</button>